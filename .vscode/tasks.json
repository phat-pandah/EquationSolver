				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:\\Program Files (x86)\\LLVM\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
